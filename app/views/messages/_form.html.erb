<div class="row">
  <div class="col-6">
    <%= form_with(model: message,local:true) do |f| %>
    <%# form_with(model: @message)でcontrollerの各アクションの@messageを使用しフォームを作成することを示す。 %>
    <%# local:trueが抜けると画面偏移しない通信が発生する。 %>
    <%# edit,newのmodel: @messageを messageに変更 %>
    
    
    <% if message.errors.any? %>
        <div id="error_explanation" class="alert alert-warning">

          <ul class="mb-0">
            <% message.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
    <div class="form-group">
    <%= f.label :title, 'タイトル' %>
    
    <%= f.text_field :title,class:'form-control' %>
    </div>
    
    <div class="form-group">
    <%= f.label :content, 'メッセージ' %>

    <%= f.text_field :content,class:'form-control' %>
    <%# f.label,f.text_fieldで@messageのどのカラムに対する入力なのかを示す。%>
    </div>
    
    <%= f.submit '投稿',class: "btn btn-primary" %>
    
    
    <% end %>
  </div>
</div>